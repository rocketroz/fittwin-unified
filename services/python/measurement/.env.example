# FitTwin Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Backend API Configuration
# ============================================================================
ENV=development
VENDOR_MODE=stub
API_URL=http://localhost:8000
API_KEY=your-staging-secret-key

# ============================================================================
# Supabase Configuration
# ============================================================================
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# ============================================================================
# Authentication
# ============================================================================
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================================================
# Payment Processing (Stripe)
# ============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================================================
# Email Service (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@fittwin.com

# ============================================================================
# MediaPipe Configuration
# ============================================================================
MEDIAPIPE_MODEL_PATH=./models/pose_landmarker.task
MEDIAPIPE_CONFIDENCE_THRESHOLD=0.7

# ============================================================================
# CrewAI Agents Configuration
# ============================================================================
OPENAI_API_KEY=your-openai-api-key
CREWAI_TELEMETRY_OPT_OUT=true

# ============================================================================
# Storage Configuration
# ============================================================================
STORAGE_BACKEND=supabase  # Options: supabase, s3, local
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=fittwin-uploads

# ============================================================================
# Monitoring & Analytics
# ============================================================================
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ENABLED=false

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_VIRTUAL_TRYON=true
ENABLE_LIDAR_CAPTURE=true
ENABLE_REFERRAL_SYSTEM=true
ENABLE_BRAND_PORTAL=true

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# CORS Configuration
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
